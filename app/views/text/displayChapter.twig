{% block content %}
    <div class="container">
        <h3>{{ book.nev }} {{ chapter }}</h3>
    </div>
    <p class="chapterText">
        {% set currentVerse = 0 %}
        {% for word in words %}
            {% set wordVerse = word.lh|split(',')[1] %}
