{% extends "layout" %}

{% block content %}

    <div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog"><div class="modal-content"></div></div>
    </div>

        <h3>{{ book.nev }} {{ chapter }}</h3>
    <p>
        {% set currentVerse = 0 %}
        {% set insideMark = false %}
        {% for word in words %}
            {% set wordVerse = word.lh|split(',')[1] %}
            {% if wordVerse > currentVerse %}
                {% set currentVerse = wordVerse %}
                {% set verseId = book.nev ~ chapter ~ "," ~ currentVerse %}
                {% if insideMark %}</mark>{% endif %}
                {% if currentVerse == verse %}<mark id="selectedVerse">{% set insideMark = true %}{% endif %}
                <a name="{{  currentVerse }}" href="#" data-verse-id="{{ verseId }}" data-trigger="toggle" data-poload="//szentiras.hu/api/ref/{{ verseId }}">
                    <sup>{{ currentVerse }}</sup>
                </a>
            {% endif %}
            <a href="#"
               class="word"
               data-wordid="{{ word.fh }}"
               data-unic="{{ word.unic|raw }}"
               data-mj="{{ word.mj }}"
               data-elem="{{ word.elem }}"
               data-szal="{{ word.szal|raw }}"
               data-szf="{{ word.szf }}"
                    >
                <span class="word">{{  word.unic|raw }}</span>
                <sup data-verse-id="{{ verseId }}" class="magyar" style="display:none">{{ word.mj }}</sup></a>
            {% endfor %}
            {% if insideMark %}</mark>{% endif %}
    </p>
    <p>
        {% if chapter > 1 %}
            <a href="/text/{{ book.nev }}/{{ chapter-1 }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Előző fejezet</a>
        {% endif %}
        {% if chapter < book.hossz %}
            <a href="/text/{{ book.nev }}/{{ chapter+1 }}" class="btn btn-default">Következő fejezet <span class="glyphicon glyphicon-chevron-right"></span></a>
        {% endif %}
     </p>
{% endblock %}
