{% extends "layout" %}

{% block menu %}
    {% include 'menu' %}
{% endblock %}

{% block content %}
        <h3>Üdvözöljük a görög újszövetségi szószedetben!</h3>
        <h4>Az Újszövetség könyvei</h4>
        <p>
            <small>
                {% for book in newTestamentBooks %}
                    <a class="btn btn-default btn-xs" href="/text/{{ book.nev }}/">{{ book.nev }}</a>
                {% endfor %}
            </small>
        </p>
        <h4>További könyvek</h4>
        {% set corpusList = { 1 : 'Septuaginta', 3: 'Patrológia', 4: 'Klasszikus görög' } %}
            {% for key,value in corpusList %}
            <h5>{{ value }}</h5>
                    <p>
                        <small>
                            {% for book in otherBooks[key] %}
                                <a class="btn btn-default btn-xs" href="/text/{{ book.nev }}/">{{ book.nev }}</a>
                            {% endfor %}
                        </small>
                    </p>

            {% endfor %}

        <p>
            <img class="img-responsive" alt="" title="Fil 1,3-8" src="/build/img/gnt_wh.jpg">
        </p>
{% endblock %}
